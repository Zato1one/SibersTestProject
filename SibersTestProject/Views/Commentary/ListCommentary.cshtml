@model ICollection<SibersTestProject.Common.Model.CommentaryModel>

@{
    ViewBag.Title = "ListCommentary";
}

<h2>ListCommentary</h2>

@foreach (var item in Model)
{
    <hr>
    @Html.ActionLink("DeleteComment", "DeleteCommentary", "Commentary", new { commentaryId = item.EntityId }, null)
    <div class="form-group">
        @Html.LabelFor(m => item.UserName)
        <div class="col-md-10">
            @Html.DisplayFor(m => item.UserName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => item.Comment)
        <div class="col-md-10">
            @Html.DisplayFor(m => item.Comment)
        </div>
    </div>
}