@model SibersTestProject.Model.Gallery.GalleryCreatePhoto
@{
    ViewBag.Title = "PhotoList";
}
<h2>PhotoList</h2>
@using (Html.BeginForm("CreatePhoto", "Gallery", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Name)
    @Html.HiddenFor(x => x.Description)
    @Html.HiddenFor(x => x.PhotoCheck)
    @Html.HiddenFor(x => x.Photos)
    @*@Html.DisplayFor(a => a.Name);*@
    <br>
    @*@Html.DisplayFor(a => a.Description);*@
    <br>
    foreach (var item in Model.Photos)
    {
        var base64 = Convert.ToBase64String(item.Image);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        <div class="previewImage" style="background-image: url(@imgSrc)"></div>
        @Html.HiddenFor(x => item.Name);
        @Html.HiddenFor(x => item.Description);
    }
    foreach (var item in Model.PhotoCheck)
    {
        var base64 = Convert.ToBase64String(item.Image);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        <div class="previewImage" style="background-image: url(@imgSrc)"></div>
        @Html.HiddenFor(x=> item.Name);
        @Html.EditorFor(a => item.Check);
    }
    <button type="submit">Upload</button>
}