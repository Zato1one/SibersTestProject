@model IEnumerable<SibersTestProject.Model.Home.UserView>
@{
    ViewBag.Title = "UserList";
}
<h2>UserList</h2>

<table class="table">
    <tr>
        <th>UserName</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Email</th>
        <th>Role</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
            {
        <tr>
            <td>@user.UserName</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>
                @foreach (var role in user.CurentRole)
                {
                    @role <br>
                }
            </td>
            <td>
                @Html.RouteLink("ChangeRole", new { controller = "Admin", action = "ChangeRole", id = user.Id })
            </td>
        </tr>
    }
</table>
