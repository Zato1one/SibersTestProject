@using Microsoft.AspNet.Identity
@using SibersTestProject.Common.Enums;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            @*<li><p class="navbar-text">Signed in as @User.Identity.GetUserName()</p></li>*@
            @if (User.IsInRole(RoleName.SuperAdmin))
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin services<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("UserList", "Index", "Home")</li>
                    </ul>
                </li>
            }
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out"></span>Logout</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Account/Register"><span class="glyphicon glyphicon-user"></span> SignUp</a></li>
        <li><a href="/Account/Login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>
}

